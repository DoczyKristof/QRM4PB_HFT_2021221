<Window x:Class="QRM4PB_HFT_2021221.WPFClient.LoadInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRM4PB_HFT_2021221.WPFClient"
        mc:Ignorable="d"
        Height="420" Width="500" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" WindowStyle="None" Topmost="True"
        Loaded="Window_Loaded" Icon="/Icons/ico_mainWindow.png">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Red" Offset="0"/>
            <GradientStop Color="#FFF10707" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="440">
        <Label Content="Loading..." FontWeight="Heavy" FontSize="28"/>
        <ProgressBar x:Name="pb_main" Minimum="0" Maximum="100"  
                         Foreground="Black" BorderBrush="{x:Null}"
                         Background="{x:Null}" Height="100" 
                     ValueChanged="pb_main_ValueChanged"/>
        <Label Content="Dóczy Kristóf - QRM4PB" FontSize="9" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
